<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_function"
        android:layout_width="368dp"
        android:layout_height="44dp"
        android:text="@string/bar_function"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="369dp"
        android:layout_height="73dp"
        android:text="@string/bar_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_function" />

    <Button
        android:id="@+id/button_equ"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_equ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_dot"
        app:layout_constraintEnd_toStartOf="@id/button_plu"/>

    <Button
        android:id="@+id/button_plu"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_plu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_equ"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_min"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_min"
        app:layout_constraintBottom_toTopOf="@id/button_plu"
        app:layout_constraintStart_toEndOf="@id/button3"/>

    <Button
        android:id="@+id/button_mul"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_mul"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintBottom_toTopOf="@id/button_min"
        />

    <Button
        android:id="@+id/button_div"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_div"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintBottom_toTopOf="@id/button_mul"/>

    <Button
        android:id="@+id/button_dot"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintEnd_toStartOf="@id/button_equ"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/num_btn_margin"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_1"
        app:layout_constraintBottom_toTopOf="@id/button0"
        app:layout_constraintStart_toStartOf="@id/button0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_2"
        app:layout_constraintBottom_toTopOf="@id/button_dot"
        app:layout_constraintStart_toEndOf="@id/button1"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_3"
        app:layout_constraintBottom_toTopOf="@id/button_equ"
        app:layout_constraintStart_toEndOf="@id/button2"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_4"
        app:layout_constraintBottom_toTopOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/button0" />

    <Button
        android:id="@+id/button5"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_5"
        app:layout_constraintBottom_toTopOf="@id/button2"
        app:layout_constraintStart_toEndOf="@id/button4"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_6"
        app:layout_constraintBottom_toTopOf="@id/button3"
        app:layout_constraintStart_toEndOf="@id/button5"
    />

    <Button
        android:id="@+id/button7"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_7"
        app:layout_constraintBottom_toTopOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/button0" />

    <Button
        android:id="@+id/button8"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_8"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintBottom_toTopOf="@id/button5"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="@dimen/num_btn_width"
        android:layout_height="@dimen/num_btn_height"
        android:text="@string/btn_9"
        app:layout_constraintBottom_toTopOf="@id/button6"
        app:layout_constraintStart_toEndOf="@id/button8"/>

</android.support.constraint.ConstraintLayout>